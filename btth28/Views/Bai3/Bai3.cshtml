@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<h2>Tính chỉ số BMI</h2>

<form method="post">
    <label for="canNang">Cân nặng (kg):</label>
    <input type="number" step="0.01" min="1" name="canNang" required />
    <br />

    <label for="chieuCao">Chiều cao (m):</label>
    <input type="number" step="0.01" min="1" name="chieuCao" required />
    <br />

    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.Bai3 != null)
{
    <h3>@ViewBag.Bai3</h3>
}
